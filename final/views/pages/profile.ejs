<!-- views\pages\profile.ejs -->
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <% include ../partials/head %>
</head>
<body>
  <!-- header -->
  <header>
    <% include ../partials/header %>
  </header>
  <!-- central section -->
  <section class="mid_section" >
    <!-- buttons menu -->
    <% include ../partials/menu %>

    <!-- Multifunctional div-->


    <div id="mainWindow">
      <div id ="profilePage">
        <div class="leftSide">
          <!-- Page to display a single profile. The "user" object is passed through from express -->
          <!-- get the first name -->
          <h1>Hi <%= user.name.first %></h1>
          <ul class="profilebtn">
            <li id="deleteUser" href="#modal"><a id="colour" href="/removeUser"> Delete Account </a> </li>
            <li id="logout" href="#modal"><a id="colour" href="/logout"> Logout </a> </li>
          </ul>
          <!-- get the medium picture -->
          <% if (user.picture.medium != "") { %>
            <img src="<%= user.picture.medium %>" alt="Medium pic of profile"  />
            <% } else { %>
              <p> No medium profile pic available</p>
              <% } %>
              <!-- get the username -->
              <h2>username: <%= user.login.username %></h2>
              <h3>password: <%= user.login.password %></h3>
              <p>
                <!-- get the gender-->
                gender: <%= user.gender %>
              </p>
              <p>
                <!-- get the dob -->
                date of birth: <%= user.dob %>
              </p>
              <p>
                <!-- get the registration date-->
                date of registration: <%= user.registered %>
              </p>
            </div>

            <div class="rightSide">

              <h3>Details</h3>
              <ul>
                <% if (user.picture.thumbnail != ""){ %>
                  <img src="<%= user.picture.thumbnail %>" alt="Thumbnails pic of profile" />
                  <% } else {%>
                  <p>No thumbnail profile pic available</p>
                  <% } %>
                </ul>
              </div>
            </div>

          </div> <!-- end mainWindow div -->


        </section><!-- end of mid_section -->
        <footer class="footer">
          <% include ../partials/footer %>
        </footer>
      </body>
      </html>
